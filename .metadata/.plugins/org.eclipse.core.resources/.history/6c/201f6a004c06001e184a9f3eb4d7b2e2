#ifndef __ST7789_GFX_H
#define __ST7789_GFX_H
#include "ST7789V.h"
#include "fonts.h"



void ST7789V_DrawPixel(ST7789V *this,uint16_t X,uint16_t Y,uint16_t color);
void ST7789V_DrawRect(ST7789V *this,uint16_t X0,uint16_t Y0,uint16_t X1,uint16_t Y1,uint16_t color);
void ST7789V_DrawCircle(ST7789V *this,uint16_t X ,uint16_t Y,uint16_t radius ,uint16_t color);
void ST7789ST7789_WriteCha_WriteChar(ST7789V * this,uint16_t X0, uint16_t Y0, char ch, FontDef font, uint16_t color, uint16_t bgcolor);

//Colors
#define BLACK      				0x0000
#define NAVY        			0x000F
#define DARKGREEN   			0x03E0
#define DARKCYAN    			0x03EF
#define MAROON      			0x7800
#define PURPLE      			0x780F
#define OLIVE       			0x7BE0
#define LIGHTGREY   			0xC618
#define DARKGREY    			0x7BEF
#define BLUE        			0x001F
#define GREEN       			0x07E0
#define CYAN        			0x07FF
#define RED         			0xF800
#define MAGENTA     			0xF81F
#define YELLOW      			0xFFE0
#define WHITE       			0xFFFF
#define ORANGE      			0xFD20
#define GREENYELLOW 			0xAFE5
#define PINK        			0xF81F


#endif /* __ST7789V_GFX_H */
